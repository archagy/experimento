<!DOCTYPE html>
<html>
<head>
  <title>Experiment</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<p class="notice" style="<%= "display:none;" if notice.nil? %>" ><%= notice %></p>
    <p class="alert" style="<%= "display:none;" if alert.nil? %>"><%= alert %></p>
    <header>
		<nav>
			<ul class="nav nav-tabs">
				<li>
					<%= link_to "Inicio", root_path %>
				</li>
				<li>
					<% if user_signed_in?%>
						<li>
							<%= link_to "Editar Perfil", edit_user_session_path(
							current_user) %>
						</li>
						<li>
							<%=	link_to "Cerrar Sesion", destroy_user_session_path, method: :delete %>
						</li>
					<%else%>
						<li>
							<%= link_to "Iniciar Sesion", new_user_session_path %>
						</li>

						<li>
							<%= link_to "Registrarse", new_user_registration_path%>
						</li>
					<%end%>
				</li>
			</ul>
		</nav>
	</header>
<%= yield %>

</body>
</html>
